<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="net.lshift.diffa.kernel.differencing">

  <sql-query name="deleteDiffById">
    delete from diffs
    where seq_id = :seq_id
    and domain = :domain
    and pair = :pair
  </sql-query>

  <sql-query name="deletePendingDiffByOid">
    delete from pending_diffs
    where oid = :oid
  </sql-query>

  <sql-query name="createNewReportedDiff">
    insert into diffs
      (seq_id, domain, pair, entity_id, is_match, detected_at, last_seen, upstream_vsn, downstream_vsn, ignored)
    values
      (:seq_id, :domain, :pair, :entity_id, :is_match, :detected_at, :last_seen, :upstream_vsn, :downstream_vsn, :ignored)
  </sql-query>

</hibernate-mapping>