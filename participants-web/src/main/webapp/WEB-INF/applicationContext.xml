<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/security
        http://www.springframework.org/schema/security/spring-security-2.0.1.xsd
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-3.0.xsd">

  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="properties">
      <bean class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName" value="java:comp/env/demoProperties"/>
      </bean>
    </property>
  </bean>

  <bean id="httpClient" class="org.apache.http.impl.client.DefaultHttpClient"/>

  <bean id="httpPost" class="org.apache.http.client.methods.HttpPost">
    <constructor-arg value="${demo.agentUrl}/rest/config/xml"/>
    <property name="entity">
      <bean class="org.apache.http.entity.FileEntity">
        <constructor-arg value="classpath:diffa-config.xml">
        </constructor-arg>
        <constructor-arg value="application/xml"/>
      </bean>
    </property>
  </bean>

  <bean id="postConfig" lazy-init="true" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject" ref="httpClient"/>
    <property name="targetMethod" value="execute"/>
    <property name="arguments">
      <list>
        <ref bean="httpPost"/>
      </list>
    </property>
  </bean>

  <bean id="upstreamPart" class="net.lshift.diffa.participants.UpstreamWebParticipant">
    <constructor-arg value="a" />
    <constructor-arg value="${demo.agentUrl}" />
  </bean>
  <bean id="downstreamPart" class="net.lshift.diffa.participants.DownstreamWebParticipant">
    <constructor-arg value="b" />
    <constructor-arg value="${demo.agentUrl}" />
  </bean>

  <bean id="upstreamRequestHandler" class="net.lshift.diffa.participants.web.ParticipantRequestHandler">
    <constructor-arg>
      <bean class="net.lshift.diffa.messaging.json.UpstreamParticipantHandler">
        <constructor-arg ref="upstreamPart" />
      </bean>
    </constructor-arg>
  </bean>
  <bean id="downstreamRequestHandler" class="net.lshift.diffa.participants.web.ParticipantRequestHandler">
    <constructor-arg>
      <bean class="net.lshift.diffa.messaging.json.DownstreamParticipantHandler">
        <constructor-arg ref="downstreamPart" />
      </bean>
    </constructor-arg>
  </bean>
</beans>